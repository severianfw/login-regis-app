<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pertemuan_8" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/defaultFontStyle</item>
    </style>

    <style name="defaultFontStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="textViewFontStyle" parent="android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">@style/defaultFontStyle</item>
    </style>

</resources>